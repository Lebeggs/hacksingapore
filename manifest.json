{
  "manifest_version": 3,
  "name": "Retirement Goals Advisor",
  "version": "1.0",
  "description": "Scans websites to check alignment with your retirement goals.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
